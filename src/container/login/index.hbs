{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
	<header>
		{{> back-button}}
	</header>

	<form class="page__section">
		<h1 class="page__title">Sign in</h1>
		<div class="form">
			<div class="form__item">
				{{> field label="Email address" type="email" name="email" placeholder="Your email address"
				action="signupForm.change" }}
				<span name="email" class="form__error">Error</span>
			</div>
			<div class="form__item">
				{{> field-password label="Password" type="{{type}}" name="password" placeholder="Enter your password"
				action="signupForm.change" }}
				<span name="password" class="form__error">Error</span>
			</div>

		</div>

		<button onclick="signupForm.submit()" class="button button--disabled" type="button">Sign in</button>
		<span class="alert alert--disabled">Attention, an error!</span>

		<a href="/recovery" class="link">Forgot password?</a>
	</form>
</div>

